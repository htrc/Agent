<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/opt/tomcat/logs/agent.log</file>
<!--  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> -->
    <encoder>
      <pattern>%date{yyyy-MM-dd'T'HH:mm:ss.SSS}\t%level\t%msg%n</pattern>
    </encoder>
  </appender>
  <appender name="AUDIT-FILE" class="ch.qos.logback.core.FileAppender">
    <file>/opt/tomcat/logs/agent-audit.log</file>
    <encoder>
      <pattern>%date{yyyy-MM-dd'T'HH:mm:ss.SSS}\t%level\t%msg%n</pattern>
    </encoder>
  </appender>

  <logger name ="audit" level="INFO" additivity="false">
    <appender-ref ref="AUDIT-FILE"/>
  </logger>

  <root level="debug">
    <appender-ref ref="FILE"/>
  </root>

</configuration>
